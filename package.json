{
  "name": "origraph",
  "private": true,
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "build-extension": "tsc -b && vite build --config vite.extension.config.ts && node ./src/scripts/generateChromeManifest.js",
    "build-library": "tsc -b && vite build --config vite.library.config.ts && node ./src/scripts/generateLibraryPackageJson.js && rimraf site/lib && mkdir -p site/lib && cp builds/library/origraph.* site/lib && cp node_modules/umd-react/dist/*.js site/lib && echo 'Copied built library to site/lib'",
    "build-storybook": "storybook build -o builds/storybook",
    "build-vocabulary": "tsx ./src/scripts/generateVocabulary.ts && prettier -w src/constants/vocabulary.ts",
    "build-site": "quarto render site",
    "build": "npm run build-library && npm run build-site && mv public/site/robots.txt public/ && tsc -b && vite build",
    "clean": "rimraf builds && rimraf coverage && rimraf site/.quarto && rimraf public/site && npm run test-post",
    "dev-app": "vite",
    "dev-site": "quarto preview site",
    "lint": "eslint .",
    "preview": "npm run build && vite preview --outDir builds/website",
    "storybook": "storybook dev -p 6006 --no-open",
    "test-post": "rimraf --glob src/\\**/*.auto.story.test.ts*",
    "test-pre": "node ./src/scripts/generateStoryTests.js",
    "test-report": "npm run test-pre && vitest --coverage --ui --no-open && npm run test-post",
    "test": "npm run test-pre && vitest && npm run test-post"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@ariakit/react": "^0.4.17",
    "@chromatic-com/storybook": "^3.2.6",
    "@comunica/bindings-factory": "^3.3.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "@floating-ui/react": "^0.27.7",
    "@monaco-editor/react": "^4.7.0",
    "@rdfjs/types": "^2.0.1",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/lodash.isequal": "^4.5.8",
    "@types/n3": "^1.24.2",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@types/semver": "^7.7.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "browser-level": "^2.0.0",
    "classnames": "^2.5.1",
    "d3-hierarchy": "^3.1.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^16.0.0",
    "immer": "^10.1.1",
    "jsdom": "^26.0.0",
    "lodash.isequal": "^4.5.0",
    "n3": "^1.25.0",
    "normalize.css": "^8.0.1",
    "prettier": "^3.5.3",
    "quadstore": "^15.0.0",
    "quadstore-comunica": "^6.0.0",
    "readable-from-web": "^1.0.0",
    "rimraf": "^6.0.1",
    "semver": "^7.7.1",
    "storybook": "^8.6.12",
    "tsx": "^4.19.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.29.1",
    "umd-react": "^19.0.0-1",
    "use-debounced-effect": "^2.0.1",
    "use-immer": "^0.11.0",
    "uuid": "^11.1.0",
    "vite": "^6.2.6",
    "vite-multiple-assets": "^2.2.5",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-html": "^3.2.2",
    "vitest": "^3.1.1",
    "wouter": "^3.6.0"
  }
}
